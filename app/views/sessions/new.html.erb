<% content_for :header do %>
	<h1 class="gotham-light">Login to your Account</h1>
<% end %>

<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <p class="actions"><%= submit_tag "Log In", class: "button icon-download" %></p>
<% end %>